{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Liste des articles</h1>
    <div class="row">
        {% for article in articles %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.titre }}</h5>
                        <p class="card-text">{{ article.texte|length > 100 ? article.texte|slice(0, 100) ~ '...' : article.texte }}</p>
                        <a href="{{ path('article_edit', { id: article.id }) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('article_delete', { id: article.id }) }}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun article disponible.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
