{% block stylesheets %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
    .example-menu {
        display: flex;
        padding: 0;
        background-color: #ccc;
        justify-content: center;
    }
    .example-menu ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }
    .example-menu > nav > ul > li {
        position: relative;
        display: inline-block;
    }
    .example-menu a {
        display: block;
        min-width: 120px;
        margin: 0.5rem;
        padding: 0.4rem 0;
        text-align: center;
        background-color: #1ABC9C;
        color: #fff;
        text-decoration: none;
        border: 1px solid #fff;
        border-radius: 4px;
        transition: all 0.3s;
    }
    .example-menu a.actif {
        background-color: #000;
        color: #1ABC9C;
        border-color: #1ABC9C;
    }
    .example-menu a:hover,
    a:hover.actif {
        background-color: #000;
        color: #fff;
        border-color: #000;
    }
    /* Styles pour la liste déroulante */
    .example-menu .dropdown {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #1ABC9C;
        border-radius: 4px;
        z-index: 1000;
    }
    .example-menu .dropdown a {
        margin: 0;
        border-radius: 0;
    }
    .example-menu li:hover .dropdown {
        display: block;
    }
</style>
{% endblock %}

{% block body %}
<div class="example-menu">
    <nav>
        <ul>
            <li>
                <a href="#">Utilisateur</a>
                <ul class="dropdown">
                    {% if not app.user %}
                        <li><a href="{{ path('app_register') }}">S'enregistrer</a></li>
                        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                    {% else %}
                        <li><a href="{{ path('app_profile') }}">{{ app.user.email }}</a></li>
                        <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                    {% endif %}
                </ul>
            </li>
            <li><a href="/home">MySymfonyApp</a></li>
            <li><a href="/lucky">Lucky</a></li>
            <li><a href="/about">About</a></li>
            <li>
                <a href="/article">Article</a>
                <ul class="dropdown">
                    <li><a href="/article/list">Liste</a></li>
                    <li><a href="/article/generate">Generate</a></li>
                    <li><a href="/article/new">Créer</a></li>
                    <li><a href="/article/edit/1">Modifier (exemple)</a></li>
                    <li><a href="/article/delete/1">Supprimer (exemple)</a></li>
                </ul>
            </li>
        </ul>
    </nav>
</div>
{% endblock %}
